<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>


<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assistant.UI.Controllers.BookListController">
   <children>
      <AnchorPane fx:id="mainAnchorPane">
         <children>
            <TableView fx:id="tableView" prefWidth="1300.0" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <columns>
                  <TableColumn fx:id="categoryColumn" editable="false" prefWidth="75.0" text="Category" />
                  <TableColumn editable="false" prefWidth="75.0" text="Book Details">
                     <columns>
                      <TableColumn fx:id="idColumn" editable="false" maxWidth="1500.0" prefWidth="75.0" text="%bookID" />
                      <TableColumn fx:id="titleColumn" editable="false" maxWidth="6000.0" prefWidth="75.0" text="%bookTitle" />
                        <TableColumn fx:id="authorColumn" editable="false" prefWidth="75.0" text="%bookAuthor" />
                        <TableColumn fx:id="isbn13" editable="false" maxWidth="4000.0" prefWidth="75.0" text="isbn 13" />
                     </columns>
                  </TableColumn>
                  <TableColumn editable="false" prefWidth="75.0" text="Location">
                     <columns>
                        <TableColumn fx:id="libraryColumn" prefWidth="162.0" text="Library" />
                        <TableColumn fx:id="cityColumn" maxWidth="3000.0" prefWidth="108.0" text="City" />
                     </columns>
                  </TableColumn>
                  <TableColumn fx:id="availabilityColumn" editable="false" maxWidth="2200.0" prefWidth="75.0" text="Availability" />
                  <TableColumn fx:id="editColumn" editable="false" maxWidth="2000.0" prefWidth="75.0" text="Edit" />
                  <TableColumn fx:id="deleteColumn" editable="false" maxWidth="2000.0" prefWidth="75.0" text="Delete" />
              </columns>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
      </AnchorPane>
   </children>
</StackPane>
